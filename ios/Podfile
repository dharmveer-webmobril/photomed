require Pod::Executable.execute_command(
  'node',
  [
    '-p',
    'require.resolve(
      "react-native/scripts/react_native_pods.rb",
      { paths: [process.argv[1]] },
    )',
    __dir__
  ]
).strip

# Required by RNMLKitTextRecognition
platform :ios, '15.5'

prepare_react_native_project!

# =============================
# Firebase + MLKit
# =============================
pod 'Firebase', :modular_headers => true
pod 'FirebaseCoreInternal', :modular_headers => true
pod 'GoogleUtilities', :modular_headers => true
pod 'FirebaseCore', :modular_headers => true
pod 'GoogleMLKit/FaceDetection', '6.0.0'

# Let RNMLKitTextRecognition auto-pull language pods
# DO NOT add TextRecognition language pods manually

pod 'AppAuth'

# =============================
# Framework linkage (optional)
# =============================
linkage = ENV['USE_FRAMEWORKS']
if linkage
  Pod::UI.puts "Configuring Pods with #{linkage}ally linked frameworks".green
  use_frameworks! :linkage => linkage.to_sym
  use_modular_headers!
end

target 'PhotoMed' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    :hermes_enabled => false,
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false
    )

    # =====================================
    # Force iOS 15.5 everywhere (MLKit + Skia safe)
    # =====================================
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.5'
      end
    end

    installer.aggregate_targets.each do |aggregate_target|
      aggregate_target.user_project.targets.each do |target|
        target.build_configurations.each do |config|
          config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.5'
        end
      end
    end

    # =====================================
    # ðŸ”¥ iOS 26 FIX: Remove AssetsLibrary
    # =====================================
    installer.pods_project.targets.each do |target|
      if target.name == 'React-Core'
        target.source_build_phase.files.each do |file|
          if file.file_ref&.path&.include?('RNCAssetsLibraryRequestHandler.m')
            file.remove_from_project
          end
        end
      end
    end
  end
end
